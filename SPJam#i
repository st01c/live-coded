
live_loop :kick do
  use_bpm 60
  with_fx :lpf do
    with_fx :bitcrusher, amp: 1, sample_rate: 10000, bits: 2 do
      with_fx :lpf, cutoff: 30 do
        2.times do
          sample :drum_heavy_kick
          sleep 0.25
        end
        3.times do
          sample :drum_heavy_kick
          sleep 0.5
        end
      end
    end
  end
end

live_loop :pf do
  use_synth :dark_sea_horn
  sync :kick
  1.times do
    with_fx :echo, phase: 0.5 do
      with_fx :ring, freq: rrand(50,60) do
        play [:C4,:E4,:G4].choose, release: 1, pan: rrand(-1,1), amp: 0.5
        sleep 0.25
      end
    end
  end
end


live_loop :ts do
  sync :kick
  with_fx :flanger, depth: rrand(0.15, 5), wave: 2 do
    if one_in(3)
      1.times do
        sample :drum_snare_hard
        sleep 0.25
      end
    else
      if one_in(2)
        2.times do
          sample :drum_snare_hard
          sleep 0.25
        end
      else
        3.times do
          sample :drum_snare_hard
          sleep 0.25
        end
      end
    end
  end
end


live_loop :ts2 do
  8.times do
    sync :kick
    sleep 0.25
    sample :elec_hi_snare
  end
end
